{
    "AWSEBDockerrunVersion": 2, 
    "containerDefinitions": [
        {
            "name": "client",
            "image": "dandocker1989/multi-client",
            "hostname": "client",
            "essential": false,
            "memory": 128
        },
        {
            "name": "server",
            "image": "dandocker1989/multi-server",
            "hostname": "api",
            "essential": false,
            "memory": 128
        },
        {
            "name": "worker",
            "image": "dandocker1989/multi-worker",
            "hostname": "worker",
            "essential": false,
            "memory": 128
        },
        {
            "name": "nginx",
            "image": "dandocker1989/multi-nginx",
            "essential": true,
            "portMappings": [
                {
                "hostPort": 80,
                "containerPort": 3050
                }
            ],
            "links": ["client", "server"],
            "memory": 128
        }
    ]
}